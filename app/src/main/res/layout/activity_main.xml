<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="TestChip"
            android:textSize="20sp"
            android:textColor="#595252"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label0"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="Numero de serie del Chip: "
                android:textColor="#5E5E5E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label0b"
                android:layout_toEndOf="@+id/label0"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#5E5E5E"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/label1"
                android:textSize="14sp"
                android:text="Cantidad de registros: "
                android:textStyle="bold"
                android:textColor="#5E5E5E"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_alignParentEnd="true"
                android:id="@+id/et_rows"
                android:layout_toEndOf="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/login_input"
                android:hint="Ingresa un numero"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:textColor="#000000"
                android:textColorHint="@color/CBC_inputBorder"
                android:textSize="14sp" />

        </RelativeLayout>

        <android.widget.Button
            android:id="@+id/btn_probar"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_btn_main"
            android:foreground="?selectableItemBackgroundBorderless"
            android:text="Probar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="Cantidad de registros recibidos: "
            android:textColor="#5E5E5E"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label2b"
            android:layout_toEndOf="@+id/label2"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#5E5E5E"
            android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label3"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="Ãšltimo registro recibido: "
            android:textColor="#5E5E5E"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label3b"
            android:layout_toEndOf="@+id/label3"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#5E5E5E"
            android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>